@model IEnumerable<proyecto.Models.Productos>

@{
    ViewData["Title"] = "MasVendidos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Productos mas vendidos</h1>

<div id="pdfContainer"><table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre_Produc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contador)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre_Produc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contador)
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
    <div>
        <button class="btn btn-primary" type="submit" id="btnPdf">Productos mas vendidos</button>
    </div>
    <script type="text/javascript">
        $("#btnPdf").click(function () {
            var sHtml = $("#pdfContainer").html();
            sHtml = sHtml.replace(/</g, "StrTag").replace(/>/g, "EndTag");
            window.open('../Reportes/Exportar?html=' + sHtml, '_blank');

        });
    </script>
